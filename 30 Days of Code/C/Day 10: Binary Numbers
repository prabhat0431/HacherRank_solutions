#include <assert.h>
#include <limits.h>
#include <math.h>
#include <stdbool.h>
#include <stddef.h>
#include <stdint.h>
#include <stdio.h>
#include <stdlib.h>
#include <string.h>
int main()
{
    int n,count=0,rem,max=0;
    scanf("%d",&n);
    while(n>=1)
    {
        rem=n%2;
        n=n/2;
        if(rem==1)
        count++;
        else {
        count=0;
        }
        if(max<count)
        max=count;
    }
    printf("%d",max);
    return 0;
}
